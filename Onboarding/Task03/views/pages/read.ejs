<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <a href="/create">Add User</a>
    <table id="users"> 
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Profile Image</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody id="userstable">
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%=  user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.dateOfBirth %></td>
                    <td><img src="<%= user.profileImage %>" alt="<%=  user.firstName %>"/></td>
                    <td><%= user.address %></td>
                    <td><%= user.zipCode %></td>
                    <td><a href="/update/<%= user.id %>">Edit</a></td>
                    <td><a href="/delete/<%= user.id %>">Remove</a></td>
                </tr>
            <% }); %>     
        </tbody>
    </table>
    
</body>
</html>
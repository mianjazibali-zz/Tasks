<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <a href="/create" class="button secondary">Add User</a>
    <% if (msg != '') { %>
        <span class="button secondary cursorText" style="float: right;"><%=  msg %></span>
    <% } %>
    <table id="users"> 
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Profile Image</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody id="userstable">
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%=  user.FirstName %></td>
                    <td><%= user.LastName %></td>
                    <td><%= user.DateOfBirth %></td>
                    <td><img src="<%= user.ProfileImageUrl %>" alt="<%=  user.FirstName %>"/></td>
                    <td><%= user.Address %></td>
                    <td><%= user.ZipCode %></td>
                    <td><a href="/update/<%= user.Id %>" class="button primary">Edit</a></td>
                    <td><a href="/delete/<%= user.Id %>" class="button danger">Remove</a></td>
                </tr>
            <% }); %>     
        </tbody>
    </table>
    
</body>
</html>